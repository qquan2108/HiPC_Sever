<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Quản Lý Banner & Popup</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <!-- Animate.css -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <style>
    :root {
      --primary: #0d6efd;
      --secondary: #6c757d;
      --accent: #ffc107;
      --bg: #f4f6fa;
      --card-radius: 12px;
      --shadow-light: rgba(0, 0, 0, 0.08);
      --font: 'Inter', sans-serif;
    }
    body {
      font-family: var(--font);
      background: var(--bg);
      color: #333;
      line-height: 1.6;
    }
    h1 {
      font-weight: 700;
      color: var(--primary);
    }
    .card-banner {
      border: none;
      border-radius: var(--card-radius);
      overflow: hidden;
      transition: transform .3s, box-shadow .3s;
      box-shadow: 0 4px 8px var(--shadow-light);
    }
    .card-banner:hover {
      transform: translateY(-6px) scale(1.02);
      box-shadow: 0 8px 20px var(--shadow-light);
    }
    .card-banner img {
      height: 180px;
      object-fit: cover;
    }
    .btn-primary {
      background: var(--primary);
      border: none;
    }
    .btn-primary:hover {
      background: #0b5ed7;
    }
    .modal-header {
      background: var(--primary);
      color: #fff;
    }
    .modal-content {
      border-radius: var(--card-radius);
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <h1 class="mb-4 text-center">Quản Lý Banner & Popup</h1>
    <ul class="nav nav-pills justify-content-center mb-4" id="manageTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="banner-tab" data-bs-toggle="tab" data-bs-target="#banner" type="button">Banners</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="popup-tab" data-bs-toggle="tab" data-bs-target="#popup" type="button">Popups</button>
      </li>
    </ul>
    <div class="tab-content" id="manageTabContent">
      <!-- Banner Tab -->
      <div class="tab-pane fade show active" id="banner" role="tabpanel">
        <div class="d-flex justify-content-end mb-3">
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBannerModal">
            <i class="bi bi-plus-lg me-1"></i> Thêm Banner
          </button>
        </div>
        <div class="row g-4" id="bannerList"></div>
      </div>
      <!-- Popup Tab -->
      <div class="tab-pane fade" id="popup" role="tabpanel">
        <div class="d-flex justify-content-end mb-3">
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPopupModal">
            <i class="bi bi-plus-lg me-1"></i> Thêm Popup
          </button>
        </div>
        <div class="list-group" id="popupList"></div>
      </div>
    </div>
  </div>

  <!-- Templates -->
  <template id="templateCardBanner">
    <div class="col-md-4">
      <div class="card card-banner animate__animated animate__fadeInUp">
        <img src="" class="card-img-top" alt="Banner">
        <div class="card-body text-center">
          <h5 class="card-title"></h5>
          <div class="btn-group" role="group">
            <button class="btn btn-sm btn-outline-secondary" onclick="previewBanner(this)"><i class="bi bi-eye"></i></button>
            <button class="btn btn-sm btn-outline-danger" onclick="deleteBanner(this)"><i class="bi bi-trash"></i></button>
          </div>
        </div>
      </div>
    </div>
  </template>

  <template id="templatePopupItem">
    <div class="list-group-item d-flex justify-content-between align-items-center animate__animated animate__fadeInDown">
      <button type="button" class="btn btn-link text-start flex-grow-1" data-bs-toggle="modal"></button>
      <button class="btn btn-sm btn-outline-danger ms-3" onclick="deletePopup(event)"><i class="bi bi-trash"></i></button>
    </div>
  </template>

  <!-- Add Banner Modal -->
  <div class="modal fade" id="addBannerModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content animate__animated animate__zoomIn">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-image me-2"></i>Thêm Banner Mới</h5>
          <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <form id="bannerForm" class="modal-body">
          <div class="mb-3">
            <label for="bannerTitle" class="form-label">Tiêu đề</label>
            <input type="text" id="bannerTitle" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="bannerImage" class="form-label">URL Hình ảnh</label>
            <input type="url" id="bannerImage" class="form-control" required>
          </div>
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-2">Lưu</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Add Popup Modal -->
  <div class="modal fade" id="addPopupModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content animate__animated animate__zoomIn">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-chat-dots me-2"></i>Thêm Popup Mới</h5>
          <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <form id="popupForm" class="modal-body">
          <div class="mb-3">
            <label for="popupTitle" class="form-label">Tiêu đề</label>
            <input type="text" id="popupTitle" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="popupContent" class="form-label">Nội dung</label>
            <textarea id="popupContent" class="form-control" rows="4" required></textarea>
          </div>
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-2">Lưu</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Banner Preview Modal -->
  <div class="modal fade" id="bannerPreviewModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content animate__animated animate__zoomIn">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title"></h5>
          <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body p-0">
          <img src="" class="img-fluid w-100" alt="Preview">
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const STORAGE = {
      banners: 'myBanners',
      popups: 'myPopups'
    };
    const get = key => JSON.parse(localStorage.getItem(key) || '[]');
    const set = (key, arr) => localStorage.setItem(key, JSON.stringify(arr));

    // Render Functions
    function renderBanner(data) {
      const tpl = document.getElementById('templateCardBanner').content.cloneNode(true);
      tpl.querySelector('img').src = data.img;
      tpl.querySelector('.card-title').textContent = data.title;
      document.getElementById('bannerList').appendChild(tpl);
    }
    function renderPopup(data) {
      const tpl = document.getElementById('templatePopupItem').content.cloneNode(true);
      const btn = tpl.querySelector('button.btn-link');
      btn.textContent = data.title;
      btn.setAttribute('data-bs-target', `#${data.id}`);
      btn.setAttribute('data-bs-toggle', 'modal');
      tmpl = tpl;
      document.getElementById('popupList').appendChild(tpl);
      addPopupModal(data);
    }
    function addPopupModal({ id, title, content }) {
      const modal = document.createElement('div');
      modal.innerHTML = `
        <div class="modal fade" id="${id}" tabindex="-1">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content animate__animated animate__bounceIn">
              <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">${title}</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">${content}</div>
            </div>
          </div>
        </div>`;
      document.body.appendChild(modal);
    }

    // Initialization
    document.addEventListener('DOMContentLoaded', () => {
      get(STORAGE.banners).forEach(renderBanner);
      get(STORAGE.popups).forEach(renderPopup);
    });

    // Form Handlers
    document.getElementById('bannerForm').addEventListener('submit', e => {
      e.preventDefault();
      const title = e.target.bannerTitle.value.trim();
      const img = e.target.bannerImage.value.trim();
      const data = { title, img };
      renderBanner(data);
      set(STORAGE.banners, [...get(STORAGE.banners), data]);
      bootstrap.Modal.getInstance(document.getElementById('addBannerModal')).hide();
      e.target.reset();
    });
    document.getElementById('popupForm').addEventListener('submit', e => {
      e.preventDefault();
      const title = e.target.popupTitle.value.trim();
      const content = e.target.popupContent.value.trim();
      const id = `popup-${Date.now()}`;
      const data = { id, title, content };
      renderPopup(data);
      set(STORAGE.popups, [...get(STORAGE.popups), data]);
      bootstrap.Modal.getInstance(document.getElementById('addPopupModal')).hide();
      e.target.reset();
    });

    // Delete Handlers
    function deleteBanner(btn) {
      const card = btn.closest('.col-md-4');
      const title = card.querySelector('.card-title').textContent;
      card.remove();
      set(STORAGE.banners, get(STORAGE.banners).filter(b => b.title !== title));
    }
    function deletePopup(event) {
      const item = event.target.closest('.list-group-item');
      const idx = Array.from(item.parentNode.children).indexOf(item);
      const popups = get(STORAGE.popups);
      popups.splice(idx, 1);
      set(STORAGE.popups, popups);
      item.remove();
    }

    // Preview
    function previewBanner(btn) {
      const card = btn.closest('.card');
      const img = card.querySelector('img').src;
      const title = card.querySelector('.card-title').textContent;
      const modalEl = document.getElementById('bannerPreviewModal');
      modalEl.querySelector('.modal-title').textContent = title;
      modalEl.querySelector('img').src = img;
      new bootstrap.Modal(modalEl).show();
    }
  </script>
</body>
</html>
